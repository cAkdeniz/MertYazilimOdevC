@model MertYazilim.Entities.Concrete.Product
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="w-75 mx-auto p-3 mt-4 shadow" asp-action="Add" method="post">
    <div class="form-group">
        <label style="color:black">Name :</label>
        <input asp-for="@Model.Name" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black" l>Category :</label>
        <select asp-for="@Model.CategoryId" class="form-control" asp-items="ViewBag.Category">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label style="color:black" l>Supplier :</label>
        <select asp-for="@Model.SupplierId" class="form-control" asp-items="ViewBag.Supplier">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label style="color:black">Quantity Per Unit :</label>
        <input asp-for="@Model.QuantityPerUnit" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">Unit Price :</label>
        <input asp-for="@Model.UnitPrice" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">Units In Stock :</label>
        <input asp-for="@Model.UnitsInStock" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <button type="submit" class="btn btn-info">Kaydet</button>
</form>
