@model List<MertYazilim.Entities.Concrete.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-info" asp-controller="Employee" asp-action="Add">Add a Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Title</th>
            <th>Title Of Courtesy</th>
            <th>BirthDate</th>
            <th>HireDate</th>
            <th>City</th>
            <th>Country</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Title</td>
                <td>@item.TitleOfCourtesy</td>
                <td>@item.BirthDate</td>
                <td>@item.HireDate</td>
                <td>@item.Address.City</td>
                <td>@item.Address.Country</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id">Düzenle</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>