@model MertYazilim.Entities.Concrete.Employee
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="w-75 mx-auto p-3 mt-4 shadow" asp-action="Update" method="post">
    <div class="form-group">
        <label style="color:black">Last Name :</label>
        <input asp-for="@Model.LastName" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black" l>First Name :</label>
        <input asp-for="@Model.FirstName" type="text" class="form-control style=" font-size: 110%"" />

    </div>
    <div class="form-group">
        <label style="color:black" l>Title :</label>
        <input asp-for="@Model.Title" type="text" class="form-control style=" font-size: 110%"" />

    </div>
    <div class="form-group">
        <label style="color:black">Title Of Courtesy :</label>
        <input asp-for="@Model.TitleOfCourtesy" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">BirthDate :</label>
        <input asp-for="@Model.BirthDate" type="date" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">HireDate :</label>
        <input asp-for="@Model.HireDate" type="date" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">City :</label>
        <input asp-for="@Model.Address.City" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">Country :</label>
        <input asp-for="@Model.Address.Country" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">Notes :</label>
        <input asp-for="@Model.Notes" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <button type="submit" class="btn btn-info">Kaydet</button>
</form>
