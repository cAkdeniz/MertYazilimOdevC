@model MertYazilim.Entities.Concrete.Supplier
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="w-75 mx-auto p-3 mt-4 shadow" asp-action="Update" method="post">
    <div class="form-group">
        <label style="color:black">Company Name :</label>
        <input asp-for="@Model.CompanyName" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">Contact Name :</label>
        <input asp-for="@Model.ContactName" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">Contact Title :</label>
        <input asp-for="@Model.ContactTitle" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <div class="form-group">
        <label style="color:black">Phone :</label>
        <input asp-for="@Model.Address.Phone" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">City :</label>
        <input asp-for="@Model.Address.City" type="text" class="form-control" style="font-size: 110%" />
    </div>
    <div class="form-group">
        <label style="color:black">Country :</label>
        <input asp-for="@Model.Address.Country" type="text" class="form-control style=" font-size: 110%"" />
    </div>
    <button type="submit" class="btn btn-info">Kaydet</button>
</form>
